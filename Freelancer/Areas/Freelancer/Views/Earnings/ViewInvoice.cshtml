@model Freelancer.Models.Invoice

@{
    ViewBag.Title = "ViewInvoice";
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
    <title>@Model.invoiceNo | Invoice</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
    <!-- GOOGLE FONTS -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css' />

</head>
<body>
    <br />
    <div class="container">

        <div class="row pad-top-botm ">
            <div class="col-lg-6 col-md-6 col-sm-6 ">
                <img src="~/images/1.png" style="padding-bottom:20px;" />
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">

                <strong>   @Model.ServiceRequest.Job.FreelancerClient.freelancerName @Model.ServiceRequest.Job.FreelancerClient.freelancerSurname</strong>
                <br />
                <i>Address :</i> @Model.ServiceRequest.Job.FreelancerClient.freelancerAddress
                <br />
                @Model.ServiceRequest.Job.FreelancerClient.city
                <br />
                South Africa

            </div>
        </div>
        <div class="row text-center contact-info">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <hr />
                <span>
                    <strong>Email : </strong>  @Model.ServiceRequest.Job.FreelancerClient.freelancerEmail
                </span>
                <span>
                    <strong>Call : </strong>  @Model.ServiceRequest.Job.FreelancerClient.freelancerPhone
                </span>
                <hr />
            </div>
        </div>
        <div class="row pad-top-botm client-info">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h4>  <strong>Client Information</strong></h4>
                <strong>  @Model.ServiceRequest.Customer.customerName @Model.ServiceRequest.Customer.customerSurname </strong>
                <br />
                <b>Address :</b> @Model.ServiceRequest.Customer.customerAddress
                <br />
                @Model.ServiceRequest.Customer.customerCity
                <br />
                <b>Call :</b> @Model.ServiceRequest.Customer.customerPhone
                <br />
                <b>E-mail :</b> @Model.ServiceRequest.Customer.customerEmail
            </div>

            <div class="col-lg-6 col-md-6 col-sm-6">

                <h4>  <strong>Payment Details </strong></h4>
                <b>Bill Amount :  @Model.totalAmount </b>
                <br />
                Bill Date :  @Model.invoiceDate
                <br />
                <b>Payment Status :  Paid </b>
                <br />
                <b>InvoiceNo :  #@Model.invoiceNo</b>
                
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>S. No.</th>
                                <th>Details</th>
                                <th>Date</th>
                                <th>Vat total</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>@Model.ServiceRequest.Job.jobDescription</td>
                                <td>@Model.invoiceDate</td>
                                <td>R @Model.vat</td>
                                <td>R @Model.totalAmount</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <hr />
                <div class="ttl-amts">
                    <h5>  Total Amount : R @Model.totalAmount</h5>
                </div>
                <hr />
                <div class="ttl-amts">
                    <h5>  VAT : @Model.vat ( by 14 % on bill ) </h5>
                </div>
                <hr />
                <div class="ttl-amts">
                    <h4> <strong>Bill Amount : R @Model.totalAmount</strong> </h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <strong> Important: </strong>
                <ol>
                    <li>
                        This is an electronic generated invoice so doesn't require any signature.

                    </li>
                    <li>
                        Please read all terms and polices on  www.freelancer.com for returns, replacement and other issues.

                    </li>
                </ol>
            </div>
        </div>
        <div class="row pad-top-botm">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <hr />
                <a href="#" class="btn btn-primary btn-lg">Print Invoice</a>
                &nbsp;&nbsp;&nbsp;
                <a href="#" class="btn btn-success btn-lg">Download In Pdf</a>

            </div>
        </div>
    </div>

</body>
</html>
